{
    "multipart": [
        {   "when": { "north": true },
            "apply": { "model": "quark:block/glow_shroom_stem" }
        },
        {   "when": { "east": true },
            "apply": { "model": "quark:block/glow_shroom_stem", "y": 90, "uvlock": true }
        },
        {   "when": { "south": true },
            "apply": { "model": "quark:block/glow_shroom_stem", "y": 180, "uvlock": true }
        },
        {   "when": { "west": true },
            "apply": { "model": "quark:block/glow_shroom_stem", "y": 270, "uvlock": true }
        },
        {   "when": { "up": true },
            "apply": { "model": "quark:block/glow_shroom_stem", "x": 270, "uvlock": true }
        },
        {   "when": { "down": true },
            "apply": { "model": "quark:block/glow_shroom_stem", "x": 90, "uvlock": true }
        },
        {   "when": { "north": false },
            "apply": { "model": "quark:block/glow_shroom_block_inside" }
        },
        {   "when": { "east": false },
            "apply": { "model": "quark:block/glow_shroom_block_inside", "y": 90, "uvlock": false }
        },
        {   "when": { "south": false },
            "apply": { "model": "quark:block/glow_shroom_block_inside", "y": 180, "uvlock": false }
        },
        {   "when": { "west": false },
            "apply": { "model": "quark:block/glow_shroom_block_inside", "y": 270, "uvlock": false }
        },
        {   "when": { "up": false },
            "apply": { "model": "quark:block/glow_shroom_block_inside", "x": 270, "uvlock": false }
        },
        {   "when": { "down": false },
            "apply": { "model": "quark:block/glow_shroom_block_inside", "x": 90, "uvlock": false }
        }
    ]
}