{
  "multipart": [
    {
      "when": {
        "axis": "y"
      },
      "apply": {
        "model": "quark:block/oak_post"
      }
    },
    {
      "when": {
        "axis": "x"
      },
      "apply": {
        "model": "quark:block/oak_post",
        "x": 90,
        "y": 90
      }
    },
    {
      "when": {
        "axis": "z"
      },
      "apply": {
        "model": "quark:block/oak_post",
        "x": 90
      }
    },
    {   
    	"when": { "chain_down": true },
        "apply": { "model": "quark:block/chain_small" }
    },
    {   
    	"when": { "chain_up": true },
        "apply": { "model": "quark:block/chain_small_top" }
    },
    {   
    	"when": { "chain_north": true },
        "apply": { "model": "quark:block/chain_small_top", "x": 90 }
    },
    {   
    	"when": { "chain_south": true },
        "apply": { "model": "quark:block/chain_small", "x": 90 }
    },
    {   
    	"when": { "chain_east": true },
        "apply": { "model": "quark:block/chain_small_top", "x": 90, "y": 90 }
    },
    {   
    	"when": { "chain_west": true },
        "apply": { "model": "quark:block/chain_small", "x": 90, "y": 90 }
    }
  ]
}