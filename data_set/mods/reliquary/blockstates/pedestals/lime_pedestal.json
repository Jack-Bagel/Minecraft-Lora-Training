{
    "multipart": [
        {
            "when": {"facing": "north"},
            "apply": {"model": "reliquary:block/pedestals/lime_pedestal"}
        },
        {
            "when": {"facing": "east"},
            "apply": {"model": "reliquary:block/pedestals/lime_pedestal", "y": 90}
        },
        {
            "when": {"facing": "south"},
            "apply": {"model": "reliquary:block/pedestals/lime_pedestal", "y": 180}
        },
        {
            "when": {"facing": "west"},
            "apply": {"model": "reliquary:block/pedestals/lime_pedestal", "y": 270}
        },
        {
            "when": {"AND": [{"enabled": true}, {"facing": "north"}]},
            "apply": {"model": "reliquary:block/pedestal_button_on"}
        },
        {
            "when": {"AND": [{"enabled": true}, {"facing": "east"}]},
            "apply": {"model": "reliquary:block/pedestal_button_on", "y": 90}
        },
        {
            "when": {"AND": [{"enabled": true}, {"facing": "south"}]},
            "apply": {"model": "reliquary:block/pedestal_button_on", "y": 180}
        },
        {
            "when": {"AND": [{"enabled": true}, {"facing": "west"}]},
            "apply": {"model": "reliquary:block/pedestal_button_on", "y": 270}
        },
        {
            "when": {"AND": [{"enabled": false}, {"facing": "north"}]},
            "apply": {"model": "reliquary:block/pedestal_button_off"}
        },
        {
            "when": {"AND": [{"enabled": false}, {"facing": "east"}]},
            "apply": {"model": "reliquary:block/pedestal_button_off", "y": 90}
        },
        {
            "when": {"AND": [{"enabled": false}, {"facing": "south"}]},
            "apply": {"model": "reliquary:block/pedestal_button_off", "y": 180}
        },
        {
            "when": {"AND": [{"enabled": false}, {"facing": "west"}]},
            "apply": {"model": "reliquary:block/pedestal_button_off", "y": 270}
        }
    ]
}